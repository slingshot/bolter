{
  "name": "@bolter/backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun --sourcemap=external",
    "build:prod": "bun run build && sentry-cli --url https://glitch.slingshot.fm sourcemaps inject ./dist && sentry-cli --url https://glitch.slingshot.fm sourcemaps upload ./dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.500.0",
    "@bolter/shared": "workspace:*",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/static": "^1.0.0",
    "@sentry/bun": "^10.35.0",
    "convict": "^6.2.4",
    "elysia": "^1.0.0",
    "jszip": "^3.10.1",
    "nanoid": "^5.0.0",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@sentry/cli": "^3.1.0",
    "@types/bun": "latest",
    "@types/convict": "^6.1.0"
  }
}
